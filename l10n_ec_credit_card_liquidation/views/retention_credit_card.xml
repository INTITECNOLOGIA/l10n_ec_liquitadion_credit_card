<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="l10n_ec_withhold_form_view" model="ir.ui.view">
        <field name="name">l10n_ec.withhold.form</field>
        <field name="model">l10n_ec.withhold</field>
        <field name="priority" eval="50" />
        <field name="mode">primary</field>
        <field name="inherit_id" ref="l10n_ec_niif.l10n_ec_withhold_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_id']" position="after">
                <field name="l10n_ec_credit_card_account_id" />
            </xpath>
            <xpath expr="/form" position="attributes">
                <attribute name="create">0</attribute>
                <attribute name="edit">0</attribute>
            </xpath>
        </field>
    </record>
    <record model="ir.actions.act_window" id="l10n_ec_withhold_credit_card_tree_view">
        <field name="name">Credit Card Withholding</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n_ec.withhold</field>
        <field name="domain">[('type', '=', 'credit_card')]</field>
        <field name="context">{'withhold_type': 'credit_card'}</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record
        id="action_move_liquidation_purchase_tree"
        model="ir.actions.act_window.view"
    >
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="l10n_ec_niif.l10n_ec_withhold_tree_no_create_view" />
        <field name="act_window_id" ref="l10n_ec_withhold_credit_card_tree_view" />
    </record>
    <record
        id="action_move_liquidation_purchase_form"
        model="ir.actions.act_window.view"
    >
        <field name="sequence" eval="4" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="l10n_ec_withhold_form_view" />
        <field name="act_window_id" ref="l10n_ec_withhold_credit_card_tree_view" />
    </record>
    <menuitem
        id="account_withhold_credit_card_menu"
        name="Withholding"
        parent="account_credit_card_main_menu"
        action="l10n_ec_withhold_credit_card_tree_view"
        sequence="20"
    />
    <record id="l10n_ec_withhold_line_credit_card_action" model="ir.actions.act_window">
        <field name="name">Credit Card Withhold Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n_ec.withhold.line</field>
        <field name="view_mode">tree,kanban,form,pivot</field>
        <field name="domain">[('withhold_id.type', '=', 'credit_card')]</field>
    </record>
    <menuitem
        id="menu_l10n_ec_withhold_line_credit_card_action"
        name="Credit Card Withhold Lines"
        parent="l10n_ec_credit_card_liquidation.account_credit_card_main_menu"
        action="l10n_ec_withhold_line_credit_card_action"
        sequence="21"
    />
</odoo>
